<div class="container">
	<div class="row text-left">
        <div class="col-md-3">
            <h2>{{user.name}}</h2>
        </div>
        <div class="col-md-6">
           <div class="row">
                <div class="col-md-12">
                    <h3>What is happening?</h3>
                    <form id="sendTweet">
                        <div class="form-group">
                            <label for="comment">Post a tweet: </label>
                            <textarea class="form-control" rows="3" id="tweet"></textarea>
                        </div>
                        <button type="submit" class="btn btn-default">Tweet</button>
                    </form>
                </div>
           </div>
            <br>
            <div class="row" id="tweets">
                {{#each tweets}}
                <div class="col-md-12">
                    
                    <div class="tweets" >
                        
                        <div class="col-md-4">
                            <a href="#"><img src="{{ owner.photo }}"></a>
                        </div>
                        <div class="col-md-8">
                            <h4>{{ owner.name }}</h4>
                            <p>{{content}}</p>
                        </div>
                        
                    </div>
                    
                </div>
                {{/each}}
            </div>
        </div>
        <div class="col-md-3">
            <h2>Who to follow</h2>
        </div>
	</div>
</div>